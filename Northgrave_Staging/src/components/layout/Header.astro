---
interface Props {
  transparent?: boolean;
}

const { transparent = true } = Astro.props;

const navLinks = [
  { label: "About", href: "#about" },
  { label: "Team", href: "#team" },
  { label: "Projects", href: "#projects" },
  { label: "Vault", href: "/vault" },
];
---

<header
  class="header"
  data-transparent={transparent}
  id="site-header"
>
  <nav class="header__nav">
    <a href="/" class="header__brand" aria-label="Northgrave Studios Home">
      <div class="header__monogram">
        <img
          src="/images/logo/northgrave-logo.png"
          alt=""
          class="header__logo-img"
          width="48"
          height="48"
        />
      </div>
      <span class="header__name">Northgrave Pictures Inc.</span>
    </a>

    <ul class="header__links" role="list">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href} class="header__link">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <button
      class="header__menu-btn"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="header__menu-icon"></span>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div class="header__mobile-menu" id="mobile-menu" aria-hidden="true">
    <ul class="header__mobile-links" role="list">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href} class="header__mobile-link">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem clamp(1rem, 4vw, 3rem);
    transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
  }

  .header[data-scrolled="true"] {
    background-color: rgba(5, 5, 9, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .header__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
  }

  .header__brand {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .header__monogram {
    display: grid;
    place-content: center;
    width: clamp(2.5rem, 5vw, 3.5rem);
    aspect-ratio: 1;
    border-radius: 1rem 0.25rem;
    border: 1px solid rgba(245, 240, 233, 0.22);
    box-shadow: var(--shadow-ember);
    background: linear-gradient(145deg, rgba(10, 6, 12, 0.85), rgba(18, 10, 16, 0.65));
    padding: 0.35rem;
    overflow: hidden;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .header__brand:hover .header__monogram {
    box-shadow: var(--shadow-ember-glow);
    transform: scale(1.05);
  }

  .header__logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(0.95) contrast(1.1);
  }

  .header__name {
    font-family: var(--font-display);
    font-size: clamp(0.9rem, 1.5vw, 1.15rem);
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-gold);
    text-transform: uppercase;
  }

  .header__links {
    display: flex;
    gap: clamp(1.5rem, 3vw, 2.5rem);
    list-style: none;
  }

  .header__link {
    font-family: var(--font-sans);
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: var(--letter-spacing-cinematic);
    color: var(--color-text);
    text-transform: uppercase;
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.3s ease;
  }

  .header__link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-ember);
    transition: width 0.3s ease;
  }

  .header__link:hover {
    color: var(--color-ember-core);
  }

  .header__link:hover::after {
    width: 100%;
  }

  .header__menu-btn {
    display: none;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
  }

  .header__menu-icon {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    position: relative;
    transition: background 0.3s ease;
  }

  .header__menu-icon::before,
  .header__menu-icon::after {
    content: "";
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    left: 0;
    transition: transform 0.3s ease, top 0.3s ease;
  }

  .header__menu-icon::before {
    top: -7px;
  }

  .header__menu-icon::after {
    top: 7px;
  }

  .header__menu-btn[aria-expanded="true"] .header__menu-icon {
    background: transparent;
  }

  .header__menu-btn[aria-expanded="true"] .header__menu-icon::before {
    top: 0;
    transform: rotate(45deg);
  }

  .header__menu-btn[aria-expanded="true"] .header__menu-icon::after {
    top: 0;
    transform: rotate(-45deg);
  }

  .header__mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(5, 5, 9, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 2rem;
    transform: translateY(-10px);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    pointer-events: none;
  }

  .header__mobile-menu[aria-hidden="false"] {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .header__mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;
  }

  .header__mobile-link {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text);
    text-transform: uppercase;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .header__mobile-link:hover {
    color: var(--color-ember);
  }

  @media (max-width: 768px) {
    .header__links {
      display: none;
    }

    .header__menu-btn {
      display: block;
    }

    .header__mobile-menu {
      display: block;
    }
  }
</style>

<script>
  // Scroll effect for header
  const header = document.getElementById("site-header");
  let lastScrollY = 0;

  function handleScroll() {
    const scrollY = window.scrollY;
    if (header) {
      header.dataset.scrolled = scrollY > 50 ? "true" : "false";
    }
    lastScrollY = scrollY;
  }

  window.addEventListener("scroll", handleScroll, { passive: true });
  handleScroll();

  // Mobile menu toggle
  const menuBtn = document.querySelector(".header__menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  menuBtn?.addEventListener("click", () => {
    const isExpanded = menuBtn.getAttribute("aria-expanded") === "true";
    menuBtn.setAttribute("aria-expanded", String(!isExpanded));
    mobileMenu?.setAttribute("aria-hidden", String(isExpanded));
  });

  // Close mobile menu on link click
  const mobileLinks = document.querySelectorAll(".header__mobile-link");
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      menuBtn?.setAttribute("aria-expanded", "false");
      mobileMenu?.setAttribute("aria-hidden", "true");
    });
  });
</script>
