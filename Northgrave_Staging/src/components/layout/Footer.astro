---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__brand">
      <span class="footer__name">Northgrave</span>
      <span class="footer__tagline">Innovative. Quality. Genre.</span>
    </div>

    <div class="footer__contact">
      <a href="mailto:cheryl@northgrave.com" class="footer__email">
        cheryl@northgrave.com
      </a>
    </div>

    <div class="footer__legal">
      <p>&copy; {currentYear} Northgrave Studios. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    padding: 4rem clamp(1rem, 4vw, 3rem) 2rem;
    background: linear-gradient(180deg, transparent, rgba(5, 5, 9, 0.9));
  }

  .footer__container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__name {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-gold);
    text-transform: uppercase;
  }

  .footer__tagline {
    font-family: var(--font-body);
    font-size: 0.875rem;
    letter-spacing: var(--letter-spacing-cinematic);
    color: var(--color-text-muted);
    text-transform: uppercase;
  }

  .footer__email {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-ember);
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .footer__email:hover {
    color: var(--color-ember-core);
  }

  .footer__legal {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
  }
</style>
