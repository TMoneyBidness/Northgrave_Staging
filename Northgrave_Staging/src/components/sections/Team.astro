---
interface Social {
  email?: string;
  linkedin?: string;
  imdb?: string;
  twitter?: string;
}

interface TeamMember {
  id: string;
  name: string;
  title: string;
  bio: string;
  portrait: string;
  socials?: Social;
}

interface Props {
  heading?: string;
  intro?: string;
  members?: TeamMember[];
}

const {
  heading = "The Team",
  intro = "Visionaries bringing stories to life.",
  members = [],
} = Astro.props;
---

<section class="team" id="team">
  <div class="team__container">
    <div class="team__header">
      <h2 class="team__heading">{heading}</h2>
      <p class="team__intro">{intro}</p>
    </div>

    <div class="team__grid">
      {members.map((member) => (
        <article class="team__member" data-member-id={member.id}>
          <div class="team__portrait-wrapper">
            <img
              src={member.portrait}
              alt={`Portrait of ${member.name}`}
              class="team__portrait"
              loading="lazy"
              width="300"
              height="400"
            />
            <div class="team__portrait-glow"></div>
          </div>
          <div class="team__content">
            <div class="team__info">
              <h3 class="team__name">{member.name}</h3>
              <p class="team__title">{member.title}</p>
            </div>

            <div class="team__bio-panel">
              <p class="team__bio">{member.bio}</p>
              {member.socials?.email && (
                <a href={`mailto:${member.socials.email}`} class="team__social-link">
                  Contact
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    position: relative;
    padding: clamp(4rem, 8vh, 7rem) clamp(1rem, 4vw, 3rem);
    background: rgba(5, 5, 9, 0.98);
  }

  .team__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .team__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .team__heading {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-gold);
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .team__intro {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
  }

  .team__grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: clamp(2rem, 4vw, 3rem);
    align-items: start;
  }

  .team__member {
    position: relative;
    width: 100%;
    max-width: none;
    margin: 0;
    display: grid;
    grid-template-columns: minmax(180px, 260px) 1fr;
    gap: clamp(1.25rem, 3vw, 2.5rem);
    align-items: start;
  }

  .team__portrait-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 3/4;
    border-radius: 1.5rem;
    overflow: hidden;
    margin-bottom: 0;
    transition: transform 0.4s ease;
  }

  .team__member:hover .team__portrait-wrapper {
    transform: scale(1.03);
  }

  .team__portrait {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.3);
    transition: filter 0.4s ease;
  }

  .team__member:hover .team__portrait {
    filter: grayscale(0);
  }

  .team__portrait-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 60%, rgba(242, 111, 37, 0.25));
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .team__member:hover .team__portrait-glow {
    opacity: 1;
  }

  .team__info {
    margin-bottom: 1.25rem;
    text-align: left;
  }

  .team__name {
    font-family: var(--font-display);
    font-size: 1.35rem;
    font-weight: 600;
    letter-spacing: var(--letter-spacing-cinematic);
    color: var(--color-text);
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .team__title {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--color-ember);
    letter-spacing: 0.05em;
    text-align: left;
  }

  .team__bio-panel {
    text-align: left;
  }

  .team__bio {
    font-family: var(--font-body);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .team__social-link {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: var(--letter-spacing-cinematic);
    color: var(--color-ember);
    text-transform: uppercase;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-ember);
    border-radius: 999px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .team__social-link:hover {
    background-color: var(--color-ember);
    color: var(--color-night);
  }

  @media (max-width: 768px) {
    .team__grid {
      grid-template-columns: 1fr;
    }

    .team__member {
      grid-template-columns: 1fr;
      max-width: 520px;
      margin: 0 auto;
    }

    .team__portrait-wrapper {
      max-width: 360px;
      margin: 0 auto;
    }

    .team__info,
    .team__title,
    .team__bio-panel {
      text-align: center;
    }
  }

  /* Placeholder for missing portraits */
  .team__portrait[src=""],
  .team__portrait:not([src]) {
    background: linear-gradient(145deg, rgba(20, 15, 25, 0.8), rgba(10, 8, 12, 0.9));
  }
</style>
