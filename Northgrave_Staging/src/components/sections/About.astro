---
interface Value {
  title: string;
  description: string;
}

interface Props {
  heading?: string;
  intro?: string;
  mission?: string;
  values?: Value[];
}

const {
  heading = "About Northgrave",
  intro = "Where vision meets execution.",
  mission = "Northgrave Studios is dedicated to creating bold, distinctive genre content that pushes creative boundaries while maintaining the highest standards of production quality.",
  values = [],
} = Astro.props;
---

<section class="about" id="about">
  <div class="about__container">
    <div class="about__header">
      <h2 class="about__heading">{heading}</h2>
      <p class="about__intro">{intro}</p>
    </div>

    <div class="about__content">
      <p class="about__mission">{mission}</p>

      {values.length > 0 && (
        <div class="about__values">
          {values.map((value) => (
            <div class="about__value">
              <h3 class="about__value-title">{value.title}</h3>
              <p class="about__value-description">{value.description}</p>
            </div>
          ))}
        </div>
      )}
    </div>

    <div class="about__accent" aria-hidden="true"></div>
  </div>
</section>

<style>
  .about {
    position: relative;
    padding: clamp(4rem, 8vh, 7rem) clamp(1rem, 4vw, 3rem);
    background: linear-gradient(180deg, rgba(5, 5, 9, 0.92) 0%, rgba(5, 5, 9, 0.95) 20%, rgba(5, 5, 9, 0.98) 100%);
  }

  .about__container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .about__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .about__heading {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-gold);
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .about__intro {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
  }

  .about__content {
    display: grid;
    gap: 4rem;
  }

  .about__mission {
    font-family: var(--font-body);
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    line-height: 1.8;
    color: var(--color-text);
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .about__values {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .about__value {
    padding: 2rem;
    background: linear-gradient(145deg, rgba(10, 6, 12, 0.6), rgba(18, 10, 16, 0.4));
    border: 1px solid rgba(242, 111, 37, 0.15);
    border-radius: 1rem;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .about__value:hover {
    transform: translateY(-4px);
    border-color: rgba(242, 111, 37, 0.35);
    box-shadow: 0 12px 40px rgba(242, 111, 37, 0.15);
  }

  .about__value-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: var(--letter-spacing-cinematic);
    color: var(--color-ember);
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .about__value-description {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  .about__accent {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(242, 111, 37, 0.08), transparent 70%);
    filter: blur(60px);
    pointer-events: none;
    z-index: -1;
  }
</style>
