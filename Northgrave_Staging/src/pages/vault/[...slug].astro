---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/layout/Header.astro";
import Footer from "../../components/layout/Footer.astro";
import projectsData from "../../../content/projects.json";

export function getStaticPaths() {
  // Generate paths for all vaulted projects
  const vaultedProjects = projectsData.projects.filter((p) => p.isVaulted);

  return vaultedProjects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Project {
  id: string;
  title: string;
  slug: string;
  poster: string;
  year: string;
  genre: string;
  status: string;
  logline: string;
  isVaulted: boolean;
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<BaseLayout
  title={`${project.title} | Vault | Northgrave Studios`}
  description={project.logline}
>
  <Header transparent={false} />

  <main class="vault-project">
    <div class="vault-project__container">
      <!-- Back to Vault -->
      <a href="/vault" class="vault-project__back">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        Exit Vault
      </a>

      <!-- Project Header -->
      <header class="vault-project__header">
        <div class="vault-project__poster-wrapper">
          <img
            src={project.poster}
            alt={`${project.title} poster`}
            class="vault-project__poster"
          />
        </div>

        <div class="vault-project__info">
          <span class="vault-project__status">{project.status}</span>
          <h1 class="vault-project__title">{project.title}</h1>
          <div class="vault-project__meta">
            <span>{project.year}</span>
            <span class="vault-project__separator">â€¢</span>
            <span>{project.genre}</span>
          </div>
        </div>
      </header>

      <!-- Project Content -->
      <section class="vault-project__content">
        <div class="vault-project__section">
          <h2 class="vault-project__section-title">Synopsis</h2>
          <p class="vault-project__synopsis">{project.logline}</p>
          <p class="vault-project__description">
            Additional project details, synopsis, and creative vision will be displayed here.
            This content is loaded from MDX files in the vault content directory.
          </p>
        </div>

        <!-- Gallery Placeholder -->
        <div class="vault-project__section">
          <h2 class="vault-project__section-title">Gallery</h2>
          <div class="vault-project__gallery">
            <div class="vault-project__gallery-placeholder">
              <p>Project gallery images will appear here.</p>
            </div>
          </div>
        </div>

        <!-- Credits Placeholder -->
        <div class="vault-project__section">
          <h2 class="vault-project__section-title">Credits</h2>
          <div class="vault-project__credits">
            <p>Project credits and team information will be displayed here.</p>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .vault-project {
    min-height: 100vh;
    padding: 8rem clamp(1rem, 4vw, 3rem) 4rem;
    background: var(--color-night-deep);
  }

  .vault-project__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .vault-project__back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-ember);
    text-decoration: none;
    margin-bottom: 3rem;
    transition: color 0.3s ease;
  }

  .vault-project__back:hover {
    color: var(--color-ember-core);
  }

  .vault-project__back svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .vault-project__header {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .vault-project__poster-wrapper {
    aspect-ratio: 2/3;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .vault-project__poster {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .vault-project__info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .vault-project__status {
    display: inline-block;
    width: fit-content;
    font-family: var(--font-sans);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-ember);
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-ember);
    border-radius: 999px;
  }

  .vault-project__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 600;
    letter-spacing: 0.05em;
    color: var(--color-text-gold);
    text-transform: uppercase;
  }

  .vault-project__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--color-text-muted);
  }

  .vault-project__separator {
    color: var(--color-ember);
  }

  .vault-project__content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .vault-project__section {
    padding: 2rem;
    background: linear-gradient(145deg, rgba(18, 12, 22, 0.6), rgba(8, 5, 10, 0.8));
    border: 1px solid rgba(242, 111, 37, 0.1);
    border-radius: 1rem;
  }

  .vault-project__section-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-ember);
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }

  .vault-project__synopsis {
    font-family: var(--font-body);
    font-size: 1.35rem;
    font-weight: 500;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .vault-project__description {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text-muted);
  }

  .vault-project__gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .vault-project__gallery-placeholder,
  .vault-project__credits {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--color-text-muted);
    text-align: center;
    padding: 3rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 0.75rem;
  }

  @media (max-width: 768px) {
    .vault-project__header {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .vault-project__poster-wrapper {
      max-width: 300px;
      margin: 0 auto;
    }

    .vault-project__info {
      text-align: center;
      align-items: center;
    }
  }
</style>
