---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/layout/Header.astro";
import PasswordForm from "../../components/vault/PasswordForm";
---

<BaseLayout
  title="Vault | Northgrave Studios"
  description="Access protected project materials."
>
  <Header transparent={false} />

  <main class="vault">
    <div class="vault__container">
      <div class="vault__content">
        <div class="vault__icon" aria-hidden="true">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
          </svg>
        </div>

        <h1 class="vault__heading">The Vault</h1>
        <p class="vault__intro">
          Enter the password to access exclusive project materials.
        </p>

        <PasswordForm client:load />
      </div>

      <div class="vault__background" aria-hidden="true">
        <div class="vault__glow"></div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .vault {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 1rem 2rem;
    background: var(--color-night-deep);
  }

  .vault__container {
    position: relative;
    width: 100%;
    max-width: 480px;
    text-align: center;
  }

  .vault__content {
    position: relative;
    z-index: 10;
    padding: 3rem 2rem;
    background: linear-gradient(145deg, rgba(18, 12, 22, 0.9), rgba(8, 5, 10, 0.95));
    border: 1px solid rgba(242, 111, 37, 0.2);
    border-radius: 1.5rem;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
  }

  .vault__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 5rem;
    height: 5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, rgba(181, 48, 28, 0.2), rgba(255, 98, 0, 0.15));
    border-radius: 50%;
    color: var(--color-ember);
  }

  .vault__icon svg {
    width: 2.5rem;
    height: 2.5rem;
  }

  .vault__heading {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-gold);
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .vault__intro {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .vault__background {
    position: absolute;
    inset: -100px;
    pointer-events: none;
    z-index: 0;
  }

  .vault__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(242, 111, 37, 0.15), transparent 70%);
    filter: blur(60px);
    animation: glow-pulse 8s ease-in-out infinite;
  }
</style>
